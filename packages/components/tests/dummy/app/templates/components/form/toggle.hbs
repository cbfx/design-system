  <h5 class="dummy-h5">"Field" control</h5>
  <div class="dummy-form-toggle-base-sample">
    <div>
      <span class="dummy-text-small">Only label</span>
      <br />
      <Hds::Form::Toggle checked="checked" as |C|>
        <C.Label>Lorem ipsum dolor</C.Label>
      </Hds::Form::Toggle>
    </div>
    <div>
      <span class="dummy-text-small">Label + Helper text</span>
      <br />
      <Hds::Form::Toggle checked="checked" as |C|>
        <C.Label>This is the label</C.Label>
        <C.HelperText>This is the helper text</C.HelperText>
      </Hds::Form::Toggle>
    </div>
    <div>
      <span class="dummy-text-small">Label + Error</span>
      <br />
      <Hds::Form::Toggle checked="checked" as |C|>
        <C.Label>This is the label</C.Label>
        <C.Error>This is the error</C.Error>
      </Hds::Form::Toggle>
    </div>
    <div>
      <span class="dummy-text-small">Label + Helper text + Error</span>
      <br />
      <Hds::Form::Toggle checked="checked" as |C|>
        <C.Label>This is the label</C.Label>
        <C.HelperText>This is the helper text</C.HelperText>
        <C.Error>This is the error</C.Error>
      </Hds::Form::Toggle>
    </div>
  </div>

  <h4 class="dummy-h4">States</h4>
  <div class="dummy-form-toggle-states-grid">
    <h5 class="dummy-h5 dummy-form-toggle-states-grid__title">Base</h5>
    {{#each @model.STATES as |state|}}
      <div mock-state-value={{state}} mock-state-selector="input">
        <span class="dummy-text-small">{{capitalize state}}:</span>
        <br />
        <Hds::Form::Toggle as |C|>
          <C.Label>Lorem ipsum dolor</C.Label>
        </Hds::Form::Toggle>
        <Hds::Form::Toggle checked="checked" as |C|>
          <C.Label>Lorem ipsum dolor</C.Label>
        </Hds::Form::Toggle>
      </div>
    {{/each}}
    <h5 class="dummy-h5 dummy-form-toggle-states-grid__title">Disabled</h5>
    {{#each @model.STATES as |state|}}
      <div mock-state-value={{state}} mock-state-selector="input">
        <span class="dummy-text-small">{{capitalize state}}:</span>
        <br />
        <Hds::Form::Toggle disabled="disabled" as |C|>
          <C.Label>Lorem ipsum dolor</C.Label>
        </Hds::Form::Toggle>
        <Hds::Form::Toggle checked="checked" disabled="disabled" as |C|>
          <C.Label>Lorem ipsum dolor</C.Label>
        </Hds::Form::Toggle>
      </div>
    {{/each}}
    {{! TODO probably we need to pass also an error message in this case? }}
    <h5 class="dummy-h5 dummy-form-toggle-states-grid__title">Invalid</h5>
    {{#each @model.STATES as |state|}}
      <div mock-state-value="{{state}}+invalid" mock-state-selector="input">
        <span class="dummy-text-small">{{capitalize state}}:</span>
        <br />
        <Hds::Form::Toggle @isInvalid={{true}} as |C|>
          <C.Label>Lorem ipsum dolor</C.Label>
          <C.Error>This is the error</C.Error>
        </Hds::Form::Toggle>
        <Hds::Form::Toggle checked="checked" @isInvalid={{true}} as |C|>
          <C.Label>Lorem ipsum dolor</C.Label>
          <C.Error>This is the error</C.Error>
        </Hds::Form::Toggle>
      </div>
    {{/each}}
  </div>

