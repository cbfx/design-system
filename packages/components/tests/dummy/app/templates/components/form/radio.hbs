  <h4 class="dummy-h4">Content</h4>
  <h5 class="dummy-h5">"Basic" control</h5>
  <div class="dummy-form-radio-base-sample">
    <div>
      <span class="dummy-text-small">Unchecked</span>
      <br />
      <Hds::Form::Radio @basic={{true}} />
    </div>
    <div>
      <span class="dummy-text-small">Checked</span>
      <br />
      <Hds::Form::Radio checked="checked" @basic={{true}} />
    </div>
  </div>
  <br />
  <div class="dummy-form-radio-base-sample">
    <div>
      <span class="dummy-text-small">With custom layout</span>
      <br />
      <div>
        <span>Some content</span>
        <Hds::Form::Radio id="my-custom-radio-example" @basic={{true}} />
        <label for="my-custom-radio-example">Custom label</label>
      </div>
    </div>
  </div>
  <h5 class="dummy-h5">"Field" control</h5>
  <div class="dummy-form-radio-base-sample">
    <div>
      <span class="dummy-text-small">Only label</span>
      <br />
      <Hds::Form::Radio as |C|>
        <C.Label>Lorem ipsum dolor</C.Label>
      </Hds::Form::Radio>
    </div>
    <div>
      <span class="dummy-text-small">Label + Helper text</span>
      <br />
      <Hds::Form::Radio as |C|>
        <C.Label>This is the label</C.Label>
        <C.HelperText>This is the helper text</C.HelperText>
      </Hds::Form::Radio>
    </div>
    <div>
      <span class="dummy-text-small">Label + Error</span>
      <br />
      <Hds::Form::Radio as |C|>
        <C.Label>This is the label</C.Label>
        <C.Error>This is the error</C.Error>
      </Hds::Form::Radio>
    </div>
    <div>
      <span class="dummy-text-small">Label + Helper text + Error</span>
      <br />
      <Hds::Form::Radio as |C|>
        <C.Label>This is the label</C.Label>
        <C.HelperText>This is the helper text</C.HelperText>
        <C.Error>This is the error</C.Error>
      </Hds::Form::Radio>
    </div>
  </div>

  <h4 class="dummy-h4">States</h4>
  <div class="dummy-form-radio-states-grid">
    <h5 class="dummy-h5 dummy-form-radio-states-grid__title">Base</h5>
    {{#each @model.STATES as |state|}}
      <div mock-state-value={{state}} mock-state-selector="input">
        <span class="dummy-text-small">{{capitalize state}}:</span>
        <br />
        <Hds::Form::Radio as |C|>
          <C.Label>Lorem ipsum dolor</C.Label>
        </Hds::Form::Radio>
        <Hds::Form::Radio checked="checked" as |C|>
          <C.Label>Lorem ipsum dolor</C.Label>
        </Hds::Form::Radio>
      </div>
    {{/each}}
    <h5 class="dummy-h5 dummy-form-radio-states-grid__title">Disabled</h5>
    {{#each @model.STATES as |state|}}
      <div mock-state-value={{state}} mock-state-selector="input">
        <span class="dummy-text-small">{{capitalize state}}:</span>
        <br />
        <Hds::Form::Radio disabled="disabled" as |C|>
          <C.Label>Lorem ipsum dolor</C.Label>
        </Hds::Form::Radio>
        <Hds::Form::Radio checked="checked" disabled="disabled" as |C|>
          <C.Label>Lorem ipsum dolor</C.Label>
        </Hds::Form::Radio>
      </div>
    {{/each}}
    <h5 class="dummy-h5 dummy-form-radio-states-grid__title">Invalid</h5>
    {{#each @model.STATES as |state|}}
      <div mock-state-value="{{state}}" mock-state-selector="input">
        <span class="dummy-text-small">{{capitalize state}}:</span>
        <br />
        <Hds::Form::Radio @isInvalid={{true}} as |C|>
          <C.Label>Lorem ipsum dolor</C.Label>
          <C.Error>This is the error</C.Error>
        </Hds::Form::Radio>
        <Hds::Form::Radio checked="checked" @isInvalid={{true}} as |C|>
          <C.Label>Lorem ipsum dolor</C.Label>
          <C.Error>This is the error</C.Error>
        </Hds::Form::Radio>
      </div>
    {{/each}}
  </div>

</section>