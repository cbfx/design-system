{{#if @basic}}
  <input type="checkbox" class={{this.classNames}} ...attributes id={{this.id}} />
{{else}}
  <div class="hds-form-field--flag-layout">
    <input
      type="checkbox"
      class="{{this.classNames}} hds-form-field__control"
      ...attributes
      id={{this.id}}
      aria-describedby={{this.ariaDescribedBy}}
    />
    {{yield (hash Label=(component "hds/form/label" fieldId=this.id _extraClass="hds-form-field__label"))}}
    {{yield
      (hash HelperText=(component "hds/form/helper-text" fieldId=this.id _extraClass="hds-form-field__helper-text"))
    }}
    {{yield (hash Error=(component "hds/form/error" fieldId=this.id _extraClass="hds-form-field__error"))}}
  </div>
{{/if}}