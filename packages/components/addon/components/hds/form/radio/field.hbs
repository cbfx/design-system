<Hds::Form::Field @layout="flag" as |F|>
  <F.OptionControl as |C|>
    <Hds::Form::Radio::Base
      class="hds-form-field__control"
      @isInvalid={{@isInvalid}}
      ...attributes
      id={{C.id}}
      aria-describedby={{C.ariaDescribedBy}}
    />
  </F.OptionControl>
  {{yield (hash Label=F.Label HelperText=F.HelperText Error=F.Error)}}
</Hds::Form::Field>