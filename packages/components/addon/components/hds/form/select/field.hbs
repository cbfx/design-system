<Hds::Form::Field @layout="vertical" as |F|>
  {{yield (hash Label=F.Label HelperText=F.HelperText Error=F.Error)}}
  <F.TextControl as |C|>
    <Hds::Form::Select::Base
      @value={{@value}}
      @isInvalid={{@isInvalid}}
      @width={{@width}}
      ...attributes
      id={{C.id}}
      aria-describedby={{C.ariaDescribedBy}}
      as |S|
    >
      {{yield (hash Options=S.Options)}}
    </Hds::Form::Select::Base>
  </F.TextControl>
</Hds::Form::Field>
