{{! TODO - which one to use? "bare" / "plain" / "pure" }}
{{#if @bare}}
  <select class={{this.classNames}} id={{this.id}} ...attributes>
    {{yield (hash Options=(component "hds/form/select/options"))}}
  </select>
{{else}}
  <div class="hds-form-field--vertical-layout">
    {{yield (hash Label=(component "hds/form/label" fieldId=this.id))}}
    {{yield (hash HelperText=(component "hds/form/helper-text" fieldId=this.id))}}
    <select class={{this.classNames}} id={{this.id}} aria-describedby={{this.ariaDescribedBy}} ...attributes>
      {{yield (hash Options=(component "hds/form/select/options"))}}
    </select>
    {{yield (hash Error=(component "hds/form/error" fieldId=this.id))}}
  </div>
{{/if}}