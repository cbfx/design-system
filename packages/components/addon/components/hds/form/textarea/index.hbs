{{#if @basic}}
  <Textarea @value={{@value}} class={{this.classNames}} ...attributes id={{this.id}} />
{{else}}
  <div class="hds-form-field--vertical-layout">
    {{yield (hash Label=(component "hds/form/label" controlId=this.id))}}
    {{yield (hash HelperText=(component "hds/form/helper-text" controlId=this.id))}}
    <Textarea
      @value={{@value}}
      class={{this.classNames}}
      ...attributes
      id={{this.id}}
      aria-describedby={{this.ariaDescribedBy}}
    />
    {{yield (hash Error=(component "hds/form/error" controlId=this.id))}}
  </div>
{{/if}}