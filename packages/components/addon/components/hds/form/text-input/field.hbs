<Hds::Form::Field @layout="vertical" as |F|>
  {{yield (hash Label=F.Label HelperText=F.HelperText Error=F.Error)}}
  <F.Control>
    <Hds::Form::TextInput::Base
      @type={{@type}}
      @value={{@value}}
      @isInvalid={{@isInvalid}}
      @width={{@width}}
      ...attributes
      id={{F.id}}
      aria-describedby={{F.ariaDescribedBy}}
    />
  </F.Control>
</Hds::Form::Field>