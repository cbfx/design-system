<Hds::Form::Field @layout="vertical" as |F|>
  {{yield (hash Label=F.Label HelperText=F.HelperText Error=F.Error)}}
  <F.TextControl as |C|>
    <Hds::Form::TextInput::Base
      @type={{@type}}
      @value={{@value}}
      @isInvalid={{@isInvalid}}
      @width={{@width}}
      ...attributes
      id={{C.id}}
      aria-describedby={{C.ariaDescribedBy}}
    />
  </F.TextControl>
</Hds::Form::Field>