{{#if @basic}}
  {{! likely will be extracted as standalone element (TBD how it's called) }}
  <div class="hds-form-toggle-wrapper">
    <input type="checkbox" class={{this.classNames}} id={{this.id}} role="switch" ...attributes />
    <div class="hds-form-toggle-facade"></div>
  </div>
{{else}}
  <div class="hds-form-field--flag-layout">
    {{! likely will be extracted as standalone element (TBD how it's called) }}
    <div class="hds-form-toggle-wrapper hds-form-field__control">
      <input
        type="checkbox"
        class="{{this.classNames}}"
        id={{this.id}}
        role="switch"
        aria-describedby={{this.ariaDescribedBy}}
        ...attributes
      />
      <div class="hds-form-toggle-facade"></div>
    </div>
    {{yield (hash Label=(component "hds/form/label" fieldId=this.id class="hds-form-field__label"))}}
    {{yield (hash HelperText=(component "hds/form/helper-text" fieldId=this.id class="hds-form-field__helper-text"))}}
    {{yield (hash Error=(component "hds/form/error" fieldId=this.id class="hds-form-field__error"))}}
  </div>
{{/if}}