<fieldset class={{this.classNames}} ...attributes>
  {{yield (hash Legend=(component "hds/form/legend" _contextualClass="hds-form-group__legend"))}}
  {{yield (hash HelperText=(component "hds/form/helper-text" _contextualClass="hds-form-group__helper-text"))}}
  <div class="hds-form-group__control-fields-wrapper">
    {{yield (hash Checkbox=(component "hds/form/checkbox/field" _contextualClass="hds-form-group__control-field"))}}
    {{yield (hash Radio=(component "hds/form/radio/field" _contextualClass="hds-form-group__control-field"))}}
    {{yield (hash Toggle=(component "hds/form/toggle/field" _contextualClass="hds-form-group__control-field"))}}
  </div>
  {{yield (hash Error=(component "hds/form/error" _contextualClass="hds-form-group__error"))}}
</fieldset>
